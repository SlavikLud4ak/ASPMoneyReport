@model BABULESASP.Models.tblTransaction

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="tr_categorie" class="control-label col-md-2">Categorie</label>   
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tr_categorie, (IEnumerable<SelectListItem>)ViewBag.CategoriesListforName, "-- Select Category --", new { htmlAttributes = new { @class = "btn btn-lg btn-secondary dropdown-toggle border border-primary" } })
                @Html.ValidationMessageFor(model => model.tr_categorie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="tr_type" class="control-label col-md-2">Type</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tr_type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tr_type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="tr_sum" class="control-label col-md-2">Sum</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tr_sum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tr_sum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="tr_date" class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tr_date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.tr_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="tr_description_" class="control-label col-md-2">Desription</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tr_description_, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tr_description_, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-primary mt-2">Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
