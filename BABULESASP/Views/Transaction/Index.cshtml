@model IEnumerable<BABULESASP.Models.tblTransaction>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Categorie
        </th>
        <th>
            Type
        </th>
        <th>
            Sum
        </th>
        <th>
            Date
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tr_categorie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tr_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tr_sum)
        </td>
        <td>            
            @Html.DisplayFor(modelItem => item.tr_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tr_description_)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
